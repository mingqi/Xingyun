package com.xingyun.usercontrol;

import android.content.Context;
import android.view.View;

public class EventSlider extends View {

	private String title;
	private String description;
	private Bitmap imbm;

	public EventSlider(Context context) {
		super(context);
		// TODO Auto-generated constructor stub
	}

	public EventSlider(Context context, String title, String description) {
		super(context);
		this.title = title;
		this.description = description;
		
		RelativeLayout.LayoutParams params = new RelativeLayout.LayoutParams(
				RelativeLayout.LayoutParams.FILL_PARENT,
				RelativeLayout.LayoutParams.FILL_PARENT);
		for (int count = 0; count < imageCount; count++) {
			ImageView imageView = new ImageView(this);
			Bitmap imbm = BitmapFactory.decodeFile(parent.listFiles()[count]
					.getAbsolutePath());
			imageView.setImageBitmap(imbm);
			imageView.setLayoutParams(params);
			flipper.addView(imageView);
		}
	}
	

}
